<!DOCTYPE html>
<html>
  <head>
    <title>Add Map</title>
    <style>
        body{
            background-color: rgb(66, 66, 66);
        }
        #map{
            height:600px;
            width:100%;
        }
        #title{
            color: white;
            text-align: center;
        }
    </style>
  </head>
  <body>
      <header id="title">
        <h3><%= text %></h3>
      </header>
    <!--The div element for the map -->
    <div id="map"></div>
    <script>
        function initMap() {
            var options = {
                zoom:11,
                center: {lat: 36.341856,lng:-93.496815}
            };
            var home = {
                coords:{
                    lat: 36.41149,
                    lng: -93.83977
                },
                icon: 'https://developers.google.com/maps/documentation/javascript/examples/full/images/beachflag.png'
            };
            const map = new google.maps.Map(document.getElementById("map"), options);
            var marker = addMarker(home);
            var infoWindow = new google.maps.InfoWindow({
                content: '<h1>Freeman-Raney Water Treatment Plant</h1>'
            })

            marker.addListener('click', function(){
                infoWindow.open(map, marker);
            })

            function addMarker(props){
                const marker = new google.maps.Marker({
                    position: props.coords,
                    map: map,
                    icon: props.icon
                });

                return marker;
            }
        }
    </script>

    <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
    <script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA9WGWQvRLy5af3DvJd8rGU0CgXyWJVYm0&callback=initMap&v=weekly"
      async
    ></script>
  </body>
</html>
